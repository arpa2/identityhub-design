@startuml

actor User
participant Authn
participant "IdHub Control" as Control
participant "Key Manager" as KeyManager
participant Authz
database "PKCS #11" as PKCS11
database KDC
database LDAP
database DNS

autonumber

User -> Control: User Del user@domain
activate User
activate Control

== Access Control ==

	Control -> Authn: SecureLayer @domain
	activate Authn
	Authn -> Control: RemoteID you@domain
	deactivate Authn

	Control -> Authz: WANT userid-delete ON user@domain AS you@domain
	activate Authz
	Authz -> Control: OK FOR admin@domain
	deactivate Authz

== Sanity Check ==

	Control -> LDAP: Compare user@domain AS admin@domain
	activate LDAP
	LDAP -[#blue]-> Control: UserID Not Found
note left: <color:blue>Alternative flow, fatal error</color>
Control -[#blue]-> User: Not Found
	LDAP -> Control: UserID Found
	deactivate LDAP

Control -> User: Queued
deactivate User

== Key Management ==

	Control -> KeyManager: Drop User user@domain
	activate KeyManager
	KeyManager -> Control: Queued
deactivate Control
	' Do not deactivate KeyManager

			KeyManager -> KDC: Drop Principal user@domain
			KeyManager -> KDC: Drop Principals user+...@domain
			activate KDC

		KeyManager -> PKCS11: Drop Layer user@domain AS admin@domain
		activate PKCS11

			KDC -> KeyManager: OK
			deactivate KDC

		PKCS11 -> KeyManager: Ready

		deactivate PKCS11

	KeyManager -> LDAP: Drop Creds for user@domain AS admin@domain
	activate LDAP
	KeyManager -> LDAP: Drop Creds for user+...@domain AS admin@domain
	KeyManager -> LDAP: Drop pkcs11:xxx;y;zz AS admin@domain
	KeyManager -> LDAP: Drop user@domain AS admin@domain
	KeyManager -> LDAP: Drop user+...@domain AS admin@domain

		KeyManager -[#blue]-> DNS: Drop TLSA records AS admin@domain
		activate DNS
		note left: <color:blue>TLSA only for hosts</color>
		DNS -[#blue]-> KeyManager: Queued
		deactivate DNS

	LDAP -> KeyManager: Ready
	deactivate LDAP

	KeyManager -> Authz: Cache hints
	activate Authz
	deactivate Authz

	' Now we deactivate KeyManager
	deactivate KeyManager

@enduml
